# Description: Irssi is a terminal based IRC client for UNIX systems.
# URL: http://irssi.org/
# Packager: milisarge
# Depends on: glib 

name=irssi
version=0.8.20
release=1

source=(https://github.com/irssi-import/irssi/releases/download/$version/$name-$version.tar.xz)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--enable-ipv6 \
	--with-textui \
	--with-proxy
	make
	make DESTDIR=$PKG install

find $PKG \
	-name .packlist -or \
	-name perllocal.pod -or \
	-name '*.bs' -or \
	-name autosplit.ix  | xargs rm
}
