# Tanım: İnternet postasını DKIM/DomainKey imzaları ile imzalar/doğrular
# URL: http://search.cpan.org/
# Paketçi: milisarge
# Gerekler: perl-crypt-openssl-rsa perl-digest-sha1 perl-mailtools perl-net-dns 

name=perl-mail-dkim
version=0.40
release=1

source=(http://www.cpan.org/authors/id/J/JA/JASLONG/Mail-DKIM-$version.tar.gz)

derle() {
cd Mail-DKIM-$version
PERL_MM_USE_DEFAULT=1 perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}
