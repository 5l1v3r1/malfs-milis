name=plasma-desktop
version=5.8.1
release=1

source=( http://download.kde.org/stable/plasma/$version/$name-$version.tar.xz)

derle() {
cd $name-$version
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}
