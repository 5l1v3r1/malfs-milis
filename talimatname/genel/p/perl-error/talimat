# Gerekler:

name=perl-error
version=0.17022
release=1

source=(http://search.cpan.org/CPAN/authors/id/S/SH/SHLOMIF/Error-$version.tar.gz)

derle() {
cd Error-$version
perl Makefile.PL INSTALLDIRS=vendor
make
make DESTDIR=$PKG install
find $PKG \
         -name '*.bs' -or \
         -name '.packlist' -or \
         -name 'perllocal.pod' | xargs rm
}
