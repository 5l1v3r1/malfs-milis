# Tanım: Curses :: UI, Perl için nesne yönelimli bir kullanıcı arabirimi çerçevesidir.
# URL: https://metacpan.org/pod/Curses::UI
# Paketçi: milisarge
# Gerekler:   

name=perl-curses-ui
version=0.9609
release=1
source=(http://search.cpan.org/CPAN/authors/id/M/MD/MDXI/Curses-UI-$version.tar.gz)

derle() {
    cd Curses-UI-$version

	perl Makefile.PL
	make CC="${CC:-gcc}" LD="${CC:-gcc}" OPTIMIZE="$CFLAGS"
	make DESTDIR=$PKG install

	find $PKG -type f \( \
		-name ".packlist" -o \
		-name "*.bs" -o \
		-name "autosplit.ix" -o \
		-name "perllocal.pod" \) -delete

	find $PKG -depth -empty -delete

}
