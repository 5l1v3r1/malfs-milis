# Gerekler: python 

name=python-xdg
version=0.25
release=1

source=(http://people.freedesktop.org/~takluyver/pyxdg-$version.tar.gz)

build() {
	cd pyxdg-$version
	python2 setup.py install --prefix=/usr --root=$PKG
}
