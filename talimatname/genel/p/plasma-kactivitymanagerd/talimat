# Tanım: KDE Etkinlik kavramı için çekirdek bileşenler
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: qt5 kf5-extra-cmake-modules kf5-kconfig kf5-kdbusaddons kf5-ki18n kf5-kcoreaddons kf5-kwindowsystem kf5-kglobalaccel kf5-kxmlgui kf5-kio

name=plasma-kactivitymanagerd
version=5.8.1
release=1
_name=kactivitymanagerd

source=( http://download.kde.org/stable/plasma/$version/${_name}-$version.tar.xz)

derle() {
cd ${_name}-$version
mkdir build
cd    build
cmake -DCMAKE_BUILD_TYPE=Release \
      -DCMAKE_INSTALL_PREFIX=/usr \
      -DKDE_INSTALL_LIBDIR=lib \
      -DBUILD_TESTING=OFF ..
      
make
make DESTDIR=$PKG install
}
