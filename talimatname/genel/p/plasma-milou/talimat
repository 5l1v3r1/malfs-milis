# Gerekler: kf5-kconfig kf5-kcoreaddons kf5-kdeclarative kf5-ki18n kf5-krunner kf5-kservice kf5-plasma-framework

isim=plasma-milou
surum=5.8.1
devir=1
_isim=milou

kaynak=( http://download.kde.org/stable/plasma/$surum/${_name}-$surum.tar.xz)

derle() {
cd ${_name}-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}
