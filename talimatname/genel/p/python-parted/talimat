name=python-parted
version=3.10.0
release=1
_name=pyparted

source=( https://fedorahosted.org/releases/p/y/${_name}/${_name}-$version.tar.gz)

build() {
cd ${_name}-$version
python setup.py build
python setup.py install --optimize=1 --root=$PKG
}
