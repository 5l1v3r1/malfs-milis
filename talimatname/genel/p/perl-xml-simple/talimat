# Depends on:

name=perl-xml-simple
version=2.20
release=1

source=(http://search.cpan.org/CPAN/authors/id/G/GR/GRANTM/XML-Simple-$version.tar.gz)

build() {
cd XML-Simple-$version
perl Makefile.PL
make
make DESTDIR=$PKG install
find $PKG \
        -name '*.bs' -or \
        -name .packlist -or \
        -name perllocal.pod | xargs rm
}
