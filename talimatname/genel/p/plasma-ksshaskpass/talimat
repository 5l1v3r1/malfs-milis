# Tanım: Kshaskpass, OpenSSH ile kullanılmak üzere KDE tabanlı bir parola deyimi iletişim kutusu.
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: kf5-kcoreaddons kf5-ki18n kf5-kwallet kf5-kwidgetsaddons

name=plasma-ksshaskpass
version=5.8.1
release=1
_name=ksshaskpass

source=( http://download.kde.org/stable/plasma/$version/${_name}-$version.tar.xz)

derle() {
cd ${_name}-$version
cmake -DCMAKE_BUILD_TYPE=Release        \
      -DCMAKE_INSTALL_PREFIX=/usr       \
      -DBUILD_TESTING=OFF   \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}
