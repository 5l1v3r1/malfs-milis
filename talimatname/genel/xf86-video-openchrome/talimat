name=xf86-video-openchrome
version=0.6.0
release=1

source=(http://xorg.freedesktop.org/archive/individual/driver/${name}-${version}.tar.bz2)

build() {
	cd $name-$version
	./configure --prefix=/usr
    make
	make DESTDIR=$PKG install
}
