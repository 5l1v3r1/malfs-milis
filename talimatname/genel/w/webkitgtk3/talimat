# Tanım: Web Tarayıcıları için küçük, verimli ve hızlı render motoru.
# URL: http://www.webkitgtk.org/
# Paketçi: milisarge
# Gerekler: libwebp libsecret geoclue gperf gtk2 gtk3 curl dbus gstreamer1-plugins-base icu enchant libsoup libxslt xorg-libxt ruby

name=webkitgtk3
version=2.4.11
release=2
source=(http://webkitgtk.org/releases/webkitgtk-$version.tar.xz
		webkitgtk-2.4.9-abs.patch
		icu59.patch)

build() {
	cd webkitgtk-$version
    patch -Np1 -i ../webkitgtk-2.4.9-abs.patch
    patch -Np1 -i ../icu59.patch
	install -d build
	cd build
	CXXFLAGS+=" -fno-delete-null-pointer-checks"
    CFLAGS+=" -fno-delete-null-pointer-checks"

	../configure \
		--prefix=/usr \
		--disable-geolocation \
		--disable-gtk-doc-html \
		--disable-silent-rules \
		--enable-video \
		--enable-jit \
		--libexecdir=/usr/lib/webkitgtk3 \
        --enable-introspection \
        --disable-gtk-doc 
        
    sed -i 's/ -shared / -Wl,-O1,--as-needed\0/g' libtool

	make 
	make -j1 DESTDIR=$PKG install
	rm -rf $PKG/usr/share/gtk-doc
}
