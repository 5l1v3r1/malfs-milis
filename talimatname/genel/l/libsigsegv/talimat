name=libsigsegv
version=2.11
release=1

source=(http://ftp.gnu.org/gnu/libsigsegv/$name-$version.tar.gz)

derle() {

    cd $name-$version
    
 	./configure --prefix=/usr  \
 	        --enable-shared \
            --disable-static                 
    make
	make DESTDIR=$PKG install

}
