# Tanım: Çevrimiçi hesap veritabanına erişmek için Glib tabanlı istemci kitaplığı 
# URL: https://gitlab.com/accounts-sso/libaccounts-glib
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: dbus-glib libxml2 sqlite python-gobject docbook-xsl

name=libaccounts-glib
version=1.21
release=1

PKGMK_KEEP_SOURCES="no"

source=(https://gitlab.com/accounts-sso/libaccounts-glib/repository/archive.zip)      
                                                                                                         
build() {
cd libaccounts*
./autogen.sh
./configure \
    --prefix=/usr \
    --disable-static \
    --disable-gtk-doc
make
make DESTDIR=$PKG install
}
