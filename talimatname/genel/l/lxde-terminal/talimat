# Tanım: lxde terminal uygulaması
# URL: http://lxde.org/
# Paketçi: milisarge
# Gerekler: intltool vte gtk3
# Grup: lxde

isim=lxde-terminal
_isim=lxterminal
surum=0.3.1
devir=1

kaynak=(http://downloads.sourceforge.net/lxde/lxterminal-$surum.tar.xz)

derle() {
cd ${_isim}-$surum
./configure --sysconfdir=/etc --prefix=/usr --enable-gtk3
make
make DESTDIR=$PKG install
}
  
