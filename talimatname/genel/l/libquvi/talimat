isim=libquvi
surum=0.9.4
devir=1
kaynak=(https://downloads.sourceforge.net/sourceforge/quvi/${isim}-${surum}.tar.xz)

derle() {
    cd "$isim-$surum"
    ./configure --prefix=/usr --mandir=/usr/man
    make
    make DESTDIR=$PKG install
}
