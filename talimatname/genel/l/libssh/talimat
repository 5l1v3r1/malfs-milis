# Tanım: C kitaplıkları aracılığıyla ssh istemci servislerine erişmek için kütüphane
# URL: http://www.libssh.org/
# Paketçi: yakar (aydin@komutan.org)
# Gerekler: doxygen cmake

name=libssh
version=0.7.5
release=1

source=( https://git.libssh.org/projects/libssh.git/snapshot/$name-$version.tar.gz)
	
derle() {
	cd $SRC/
	cmake $name-$version/ -DCMAKE_INSTALL_PREFIX=/usr \
    -DCMAKE_BUILD_TYPE=Release
 	make
 	make DESTDIR=$PKG install
}
