# Tanım: Lua için Just-In-Time Derleyici
# URL: http://luajit.org/
# Paketçi: milisarge
# Gerekler:

name=luajit
version=2.0.4
release=1
source=(http://luajit.org/download/LuaJIT-$version.tar.gz)

derle() {
  cd LuaJIT-$version
  sed -i 's/PREFIX= \/usr\/local/\PREFIX= \/usr/' Makefile
  make
  make DESTDIR=$PKG install
}
