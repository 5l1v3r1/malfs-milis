# Tanım: Libfm-ekstra paket kütüphane ve önbelleği 1.0.0-menü libexec menü-cache-gen tarafından gerekli diğer dosyaları içerir.
# URL: http://pcmanfm.sourceforge.net/
# Paketçi: milisarge
# Gerekler: glib intltool perl-xml-parser

name=libfm-extra
_name=libfm
version=1.2.3
release=1
source=(http://downloads.sourceforge.net/pcmanfm/${_name}-$version.tar.xz)

build() {
cd ${_name}-$version
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --with-extra-only \
            --with-gtk=no     \
            --disable-static
make 
make DESTDIR=$PKG install
}
