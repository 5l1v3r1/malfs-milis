# Tanım: Portatif bir Açık Kaynak UPnP Geliştirme Seti.
# URL: http://pupnp.sourceforge.net/
# Paketçi: milisarge
# Gerekler:

name=libupnp
version=1.6.19
release=1
source=(http://downloads.sourceforge.net/project/pupnp/pupnp/libUPnP%20$version/$name-$version.tar.bz2)

derle() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man \
		--disable-static \
		--disable-dependency-tracking

	make
	make DESTDIR=$PKG install
}
