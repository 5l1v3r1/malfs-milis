# Tanım: "RESTful" olduğunu söyleyen internet servislerine daha kolay erişmenizi sağlar.
# URL: http://www.gnome.org/
# Paketçi: milisarge
# Gerekler: libsoup gobject-introspection 

name=librest
version=0.7.93
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/rest/${version%.*}/rest-$version.tar.xz)

derle() {
cd rest-$version
./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --with-ca-certificates=/etc/ssl/certs
make
make DESTDIR=$PKG install
}
