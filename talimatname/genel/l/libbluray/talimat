# Tanım: Blu-Ray erişim kitaplığı.
# URL: http://www.videolan.org/developers/libbluray.html
# Paketçi: milisarge
# Gerekler: libxml2 freetype

name=libbluray
version=0.6.2
release=1
source=(https://get.videolan.org/$name/$version/$name-$version.tar.bz2)

derle() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--mandir=/usr/man

	make
	make DESTDIR=$PKG install
}
