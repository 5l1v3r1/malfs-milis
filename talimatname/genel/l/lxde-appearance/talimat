# Tanım: GTK + 2 için masaüstünden bağımsız bir tema değiştirici içeriyor
# URL: http://lxde.org/
# Paketçi: milisarge@gmail.com
# Gerekler: gtk2 intltool

name=lxde-appearance
_name=lxappearance
version=0.6.2
release=1

source=(http://downloads.sourceforge.net/lxde/files/${_name}-$version.tar.xz)


derle() {
cd ${_name}-$version
./configure --prefix=/usr     \
            --sysconfdir=/etc \
            --disable-static  \
            --enable-dbus 

make
make DESTDIR=$PKG install

}
