# Tanım: GDI + API'nin Açık Kaynak Uygulaması
# URL: http://www.mono-project.com/
# Paketçi: milisarge
# Gerekler: libtiff cairo giflib glib libexif
 
name=libgdiplus
version=4.2
release=1
source=(http://download.mono-project.com/sources/${name}/${name}-${version}.tar.gz)

derle() {
	cd $name-${version}
    sed -i -e 's/-L\${libjpeg_prefix}\/lib -ljpeg/-ljpeg/' configure
	./configure --prefix=/usr --with-cairo=system
  	make
	make DESTDIR=$PKG install
}
