# Tanım: lzo tabanlı sıkıştırıcı uygulama
# URL: http://www.lzop.org/
# Paketçi: milisarge
# Gerekler: lzo

name=lzop
version=1.03
release=1
source="http://www.lzop.org/download/$name-$version.tar.gz"

derle() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--enable-shared
	make
	make DESTDIR=$PKG install
}
