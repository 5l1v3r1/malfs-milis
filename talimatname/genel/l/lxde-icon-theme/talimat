# Gerekler: gtk-update-icon-cache

name=lxde-icon-theme
version=0.5.1
release=2

source=(http://downloads.sourceforge.net/lxde/$name-$version.tar.xz)


build() {
cd $name-$version
./configure --prefix=/usr 
make
make DESTDIR=$PKG install
}
