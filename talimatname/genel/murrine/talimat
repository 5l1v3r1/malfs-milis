# Description: Cairo tabanlÄ± GTK motoru.
# URL: http://www.cimitan.com/murrine/
# Packager: milisarge
# Depends on: gtk2

name=murrine
version=0.98.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd murrine-$version

./configure \
--prefix=/usr \
--enable-animation \
--enable-animationrtl

make
make DESTDIR=$PKG install
}
