# Depends on: perl-uri xfce4-libui xfce4-libutil

name=exo
version=0.10.7
release=1
source=(http://archive.xfce.org/src/xfce/$name/${version%.*}/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure --prefix=/usr \
	--sysconfdir=/etc
	make
	make DESTDIR=$PKG install
	rm -r $PKG/usr/share/gtk-doc
}
