# Tanım: Dosya meta verilerini ayıklamak için bir kütüphane 
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: kf5-karchive kf5-ki18n ebook-tools exiv2 ffmpeg poppler-qt5 taglib 

isim=kf5-kfilemetadata
surum=5.27.0
devir=1
_isim=kfilemetadata
_surum=5.27

kaynak=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$surum.tar.xz)

derle() {
cd $_name-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}
