isim=kf5-kconfig
surum=5.27.0
devir=1
_isim=kconfig
_surum=5.27

kaynak=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$surum.tar.xz)


derle() {
cd ${_name}-$surum
cmake   -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_BUILD_TYPE=Release  \
        -DLIB_INSTALL_DIR=lib       \
        -DBUILD_TESTING=OFF
        
make
make DESTDIR=$PKG install
}

