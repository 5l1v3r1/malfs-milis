# Tanım: Linux için MLT video çerçevesini kullanan doğrusal olmayan bir video düzenleyicisi
# URL: http://www.kdenlive.org/
# Paketçi: milisarge
# Gerekler: kf5-knewstuff kf5-kplotting kf5-knotifyconfig kf5-kded kf5-kfilemetadata qt5-webkit mlt xorg-glu sdl-image hicolor-icon-theme qt5 kf5-extra-cmake-modules kf5-kdoctools v4l-utils ffmpeg cdrkit libdv recordmydesktop xine-ui dvdauthor plasma-desktop

name=kdenlive
version=16.08.1
release=1

source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

derle() {
  mkdir -p build
  cd build
  cmake ../$name-$version       \
    -DCMAKE_BUILD_TYPE=Release  \
    -DCMAKE_INSTALL_PREFIX=/usr \
    -DKDE_INSTALL_LIBDIR=lib    \
    -DBUILD_TESTING=OFF
  make
  make DESTDIR=$PKG install
}

