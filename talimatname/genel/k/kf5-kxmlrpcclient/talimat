# Tanım: KDE için XML-RPC istemci kütüphanesi
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28
# Gerekler: kf5-kcoreaddons kf5-ki18n kf5-kio
# Grup: kde

isim=kf5-kxmlrpcclient
surum=5.41.0
devir=1
_isim=kxmlrpcclient
_surum=5.41

kaynak=(http://download.kde.org/stable/frameworks/${_surum}/${_isim}-${_surum}-$surum.tar.xz)

derle() {
cd ${_isim}-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

