isim=kf5-kparts
surum=5.27.0
devir=1
_isim=kparts
_surum=5.27

kaynak=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$surum.tar.xz)

derle() {
cd ${_name}-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

