name=kf5-kpackage
version=5.27.0
release=1
_name=kpackage
_version=5.27

source=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$version.tar.xz)

derle() {
cd ${_name}-$version
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

