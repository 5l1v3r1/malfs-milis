# Tanım: Qt5 için görüntü formatı eklentileri
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: kf5-extra-cmake-modules qt5 jasper openexr kf5-karchive

isim=kf5-kimageformats
surum=5.27.0
devir=1
_isim=kimageformats
_surum=5.27

kaynak=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$surum.tar.xz)

derle() {
cd ${_name}-$surum
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

