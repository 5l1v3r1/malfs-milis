# Tanım: KNotify için yapılandırma sistemi
# URL: https://www.kde.org/
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: kf5-kcompletion kf5-kconfig kf5-ki18n kf5-kio phonon-qt5

name=kf5-knotifyconfig
version=5.27.0
release=1
_name=knotifyconfig
_version=5.27

source=( http://download.kde.org/stable/frameworks/${_version}/${_name}-$version.tar.xz)

derle() {
cd ${_name}-$version
cmake -DCMAKE_INSTALL_PREFIX=/usr \
      -DCMAKE_BUILD_TYPE=Release  \
      -DLIB_INSTALL_DIR=lib       \
      -DBUILD_TESTING=OFF         \
      -Wno-dev
      
make
make DESTDIR=$PKG install
}

