# Tanım: Small audio and MIDI framework part of the OpenBSD project.
# URL: http://www.sndio.org/
# Paketçi: milisarge
# Gerekler: alsa-lib

name=sndio
version=1.2.0
release=1
source=(http://www.sndio.org/$name-$version.tar.gz)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make DESTDIR=$PKG install
}
