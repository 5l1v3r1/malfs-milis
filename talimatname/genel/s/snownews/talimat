# Depends on: libxml2 gettext perl

name=snownews
version=1.5.12
release=1
source=(http://kiza.kcore.de/software/$name/download/$name-$version.tar.gz)

build() {
  cd $name-$version
  
  ./configure --prefix=/usr \
              --disable-nls
  make
  make DESTDIR=$PKG install
}
