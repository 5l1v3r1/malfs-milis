# Tanım: Sistem çağrı izleme programı (iz, makas, vb. gibi)
# URL: http://sourceforge.net/projects/strace/
# Paketçi: milisarge
# Gerekler: libunwind

name=strace
version=4.12
release=1
source=(http://download.sourceforge.net/$name/$name-$version.tar.xz)

build() {
    cd $name-$version
    ./configure --prefix=/usr \
    --with-libunwind
    make
    make DESTDIR=$PKG install
}
