# URL: https://www.gnu.org/software/sharutils/
# Paketçi: milisarge
# Gerekler:

name=sharutils
version=4.15.2
release=1

source=(http://ftp.gnu.org/gnu/$name/$name-$version.tar.xz)

derle() {
cd $name-$version
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}
