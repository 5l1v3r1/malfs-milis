# Tanım: Verileri Bluetooth ses çıkış cihazlarına aktarmak için kullanılan dijital ses kodlayıcı ve kod çözücü.
# URL: https://fr.wikipedia.org/wiki/SBC_%28codec%29
# Paketçi: milisarge
# Gerekler: libsndfile 

name=sbc
version=1.2
release=1

source=(http://www.kernel.org/pub/linux/bluetooth/$name-$version.tar.xz)

derle()
{
cd $name-$version
./configure --prefix=/usr \
--disable-static
make
make DESTDIR=$PKG install
}
