# Tanım: Yüksek performans mesaj iletim arayüzü
# URL: https://www.open-mpi.org
# Paketçi: milisarge
# Gerekler:

name=openmpi
version=2.1.1
release=1
source=(https://www.open-mpi.org/software/ompi/v2.1/downloads/$name-$version.tar.bz2)

derle() {
  cd "$name-$version"
  ./configure --prefix="$PKG/usr"
  make "$MAKEFLAGS"
  make install
}
