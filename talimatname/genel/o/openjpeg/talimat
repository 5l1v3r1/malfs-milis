# Tanım: OpenJPEG, JPEG-2000 standardının açık kaynaklı bir uygulamasıdır.
# URL: http://www.ijg.org/
# Paketçi: milisarge
# Gerekler: lcms2 libpng libtiff 

name=openjpeg
version=1.5.2
release=1

source=(http://downloads.sourceforge.net/openjpeg.mirror/$name-$version.tar.gz )


build() {
	cd openjpeg-$version
	autoreconf -f -i
	./configure --prefix=/usr --disable-static
	make
	make DESTDIR=$PKG install
	ln -s openjpeg-1.5/openjpeg.h $PKG/usr/include
}
