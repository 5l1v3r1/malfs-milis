# Gerekler: ilmbase 

name=openexr
version=2.2.0
release=1

source=( http://savannah.nongnu.org/download/$name/$name-$version.tar.gz)

build() {
cd $name-$version
./configure --prefix=/usr \
--localstatedir=/var \
--sysconfdir=/etc

make
make DESTDIR=$PKG install
}
