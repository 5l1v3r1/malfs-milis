# Tanım: Kademlia DHT'nin (Distributed Hash Table) bir C ++ 11 uygulaması,
# URL: https://github.com/savoirfairelinux/opendht
# Paketçi: milisarge
# Gerekler: cmake gnutls nettle msgpack-c python3-setuptools cython argon2

name=opendht
version=1.3.6
release=1
source=(https://github.com/savoirfairelinux/opendht/archive/$version.tar.gz::$name-$version.tar.gz)

build() {
	cd $name-$version
	mkdir -p build
	cd build
	cmake .. \
	-DCMAKE_BUILD_TYPE=Release \
	-DOPENDHT_PYTHON=ON \
	-DCMAKE_INSTALL_PREFIX=/usr \
	-DCMAKE_INSTALL_LIBDIR=lib
	make
	make DESTDIR=$PKG install
}
