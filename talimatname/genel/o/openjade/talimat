# Tanım: James Clark'ın Belge Stili Semantiği ve Şartname Dilinin uygulanması
# URL: http://openjade.sourceforge.net/ 
# Paketçi: milisarge
# Gerekler: opensp


name=openjade
version=1.3.3-pre1
release=2
source=(http://downloads.sourceforge.net/project/$name/$name/1.3.3/$name-$version.tar.gz
	iostream.patch msggen.pl.patch)

derle() {
	cd $name-$version

	patch -p 1 -i $SRC/iostream.patch
	patch -p 1 -i $SRC/msggen.pl.patch

	./configure \
		--prefix=/usr 
		

	make
	make DESTDIR=$PKG install
}

