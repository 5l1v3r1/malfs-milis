# Description: KRunner plugin for KDE Telepathy
# URL: http://community.kde.org/Real-Time_Communication_and_Collaboration
# Packager: alihan-ozturk28@hotmail.com
# Depends on: kf5-extra-cmake-modules kf5-kdoctools telepathy-kde-common-internals kf5-krunner 

name=telepathy-kde-contact-runner
version=16.08.1
release=1
_name=ktp-contact-runner

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

build() {
  cd ktp-contact-runner-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr  \
        -DCMAKE_BUILD_TYPE=Release   \
        -DBUILD_TESTING=OFF
        
  make
  make DESTDIR=$PKG install
}
