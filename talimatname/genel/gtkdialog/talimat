# Description: Gtkdialog hızlı arayüz yapma aracı 
# URL: http://linux.pte.hu/~pipas/gtkdialog/ 
# Packager: milisarge
# Depends on: gtk2

name=gtkdialog
version=0.8.3
release=1
source=(http://gtkdialog.googlecode.com/files/gtkdialog-$pkgver.tar.gz)

build() {
  cd $name-$version
  ./configure --prefix=/usr
  make
  make prefix=$PKG/usr install
  rm -r $PKG/usr/info
  mkdir -p "$pkgdir"/usr/share/doc/$pkgname
  cp -a examples "$pkgdir"/usr/share/doc/$pkgname/examples
}
