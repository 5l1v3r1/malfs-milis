# Tanım: Video CD'leri ve Süper Video CD'leri geliştirme, ayrıştırma ve analiz etme için tam özellikli bir mastering paketidir
# URL: http://www.vcdimager.org/
# Paketçi: milisarge
# Gerekler: libcdio libxml2 

name=vcdimager
version=0.7.24
release=1

source=(http://ftp.twaren.net/Unix/GNU/gnu/$name/$name-$version.tar.gz)

derle() {
	cd $name-$version
	./configure --prefix=/usr \
		--with-xml-prefix=/usr \
		--mandir=/usr/share/man \
		--infodir=/usr/share/info
	make
	make DESTDIR=$PKG install
	rm $PKG/usr/share/info/dir
}
  

