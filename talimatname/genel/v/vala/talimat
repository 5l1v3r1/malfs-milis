# Tanım: GObject türü sistem için derleyici
# URL: http://live.gnome.org/Vala
# Paketçi: milisarge
# Gerekler: glib 

name=vala
version=0.28.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/vala/${version%.*}/$name-$version.tar.xz )

derle() {
cd $name-*
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}

