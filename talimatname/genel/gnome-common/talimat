# Description: Common macros pour GNOME 3 (GIT Version)
# URL: http://www.gnome.org
# Packager: milisarge
# Depends on:

name=gnome-common
version=3.18.0
release=1
source=(http://download.gnome.org/sources/$name/${version:0:4}/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make  DESTDIR=$PKG/ install
}
