# Tanım: UNIX sistemler için terminal temelli IRC uygulaması
# URL: http://irssi.org/
# Paketçi: milisarge
# Gerekler: glib

name=irssi
version=0.8.20
release=1
source=(https://github.com/irssi-import/irssi/releases/download/$version/$name-$version.tar.xz)

derle() {
cd $name-$version
	./configure --prefix=/usr \
	--sysconfdir=/etc \
	--enable-ipv6 \
	--with-textui \
	--with-proxy
	make
	make DESTDIR=$PKG install

find $PKG \
	-name .packlist -or \
	-name perllocal.pod -or \
	-name '*.bs' -or \
	-name autosplit.ix  | xargs rm
}
