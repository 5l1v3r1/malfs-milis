name=xfce4-artwork
version=0.1.1
_debian_version=0.1.1a~git+20110420
release=1
source=(http://ftp.debian.org/debian/pool/main/x/$name/${name}_$_debian_version.orig.tar.gz)

build() {
  cd "$SRC/$name-0.1.1a"

  ./configure --prefix=/usr
  make
  make backdropsdir="$PKG/usr/share/backgrounds/xfce" install
}

