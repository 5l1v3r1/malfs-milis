# Tanım: GTK Xfce Engine paketi, onları görüntülemek için gereken birkaç GTK+ 2 ve GTK+ 3 temasını ve kütüphanelerini içerir.
# URL: http://www.xfce.org
# Paketçi: milisarge@gmail.com
# Gerekler: gtk2 gtk3

_name=gtk-xfce-engine

name=xfce4-gtk-engine
version=3.2.0
release=2

source=(http://archive.xfce.org/src/xfce/${_name}/${version%.*}/${_name}-$version.tar.bz2)

derle() {
cd ${_name}-$version
	./configure --prefix=/usr \
	--enable-gtk3
	make
	make DESTDIR=$PKG install
}
