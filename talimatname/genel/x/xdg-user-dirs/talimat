# Tanım: ~ / Masaüstü ve ~ / Müzik gibi kullanıcı dizinlerini yönetme
# Url: http://www.freedesktop.org/wiki/Software/xdg-user-dirs
# Paketçi: milisarge
# Gerekler: libxslt docbook-xsl

name=xdg-user-dirs
version=0.15
release=2
source=(http://user-dirs.freedesktop.org/releases/$name-$version.tar.gz
        xdg-user-dirs-src)

derle() {
  cd $name-$version
  ./configure --prefix=/usr --sysconfdir=/etc
  make
  make DESTDIR=$PKG install
  install -D ../$name-src $PKG/etc/X11/xinit/xinitrc.d/xdg-user-dirs
}
