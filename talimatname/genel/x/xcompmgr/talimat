# Tanım: X.org için Bileşik Pencere efektleri yöneticisi
# URL: http://xorg.freedesktop.org/
# Paketçi: milisarge
# Gerekler: xorg-libxcomposite xorg-libxdamage xorg-libxrender xorg-libxext

name=xcompmgr
version=1.1.7
release=1

source=(http://xorg.freedesktop.org/releases/individual/app/${name}-${version}.tar.bz2 fix_broken_shadows.diff)

derle() {
  cd ${name}-${version}
  patch -Np0 -i ${SRC}/fix_broken_shadows.diff
  ./configure --prefix=/usr
  make

  make DESTDIR="${PKG}" install
  install -m755 -d "${PKG}/usr/share/licenses/${name}"
  install -m644 COPYING "${PKG}/usr/share/licenses/${name}/"
}
