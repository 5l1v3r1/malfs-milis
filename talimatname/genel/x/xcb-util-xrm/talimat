name=xcb-util-xrm
_name=util-xrm
version=1.2
release=1
source=(https://github.com/Airblader/xcb-util-xrm/releases/download/v${version}/xcb-util-xrm-${version}.tar.gz::$name-$version.tar.gz)

derle() {
    cd "$name-$version"
   ./configure --prefix=/usr
    make
    make DESTDIR="$PKG" install
}
