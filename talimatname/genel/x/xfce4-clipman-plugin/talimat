# Depends on: xfce4-panel libunique1 xorg-libxtst qrencode

name=xfce4-clipman-plugin
version=1.2.6
release=1

source=(http://archive.xfce.org/src/panel-plugins/$name/${version%.*}/$name-$version.tar.bz2)

build() {
cd $name-$version
	./configure \
    --prefix=/usr \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib \
    --localstatedir=/var \
    --disable-debug
	make
	make DESTDIR=$PKG install
}
