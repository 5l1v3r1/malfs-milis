# Tanım: X11 panosuna komut satırı arayüzü
# URL: https://github.com/astrand/xclip
# Paketçi: milisarge
# Gerekler: xorg-libxmu

name=xclip
version=0.12
release=1
source=(http://downloads.sourceforge.net/$name/$name-$version.tar.gz)

build() {
    cd $name-$version

    ./configure --prefix=/usr \
                --mandir=/usr/man
    make
    make DESTDIR=$PKG install
}
