# Tanım: XF86 Ses tuşlarını etkinleştiren ve senkronize sesli uyarıları destekleyen temel hizmet programı
# URL: http://xfce.org/
# Paketçi: milisarge
# Gerekler: gstreamer-plugins-base keybinder xfce4-conf glib

name=xfce4-volumed
version=0.1.13
release=1
source=(http://archive.xfce.org/src/apps/$name/${version::3}/$name-$version.tar.bz2)

build() {
	cd $name-$version

	./configure --prefix=/usr --libexecdir=/usr/lib/$name
	make
	make DESTDIR=$PKG install
}
