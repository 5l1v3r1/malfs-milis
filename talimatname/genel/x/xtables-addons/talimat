# Tanım: Xtables-addons patch-o-matic'in (-ng) devamı niteliğindedir. Ana Xtables paketinde kabul edilmeyen uzantılar içeriyor.
# URL: http://xtables-addons.sourceforge.net/
# Paketçi: milisarge
# Gerekler: iptables libmnl

name=xtables-addons
version=2.10
release=1
source=(http://downloads.sourceforge.net/project/$name/Xtables-addons/$name-$version.tar.xz)

derle() {
	cd $name-$version

	./configure \
		--prefix=/usr \
		--libexecdir=/usr/lib \
		--mandir=/usr/man \
		--disable-dependency-tracking

	make
	make DESTDIR=$PKG install
}
