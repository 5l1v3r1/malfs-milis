# Paketçi: milisarge
# Gerekler: xorg-xinit 

name=console-tdm
version=1.2.2
release=1
source=(https://github.com/dopsi/console-tdm/archive/v$version.tar.gz::$name-$version.tar.gz)

derle() {
    cd "$SRC/$name-$version"
    make DESTDIR="$PKG" PREFIX="/usr" install
}
