# Tanım: OpenPrinting CUPS Filtreleri
# URL: http://www.cups.org
# Paketçi: milisarge
# Gerekler: bc cups lcms2 poppler qpdf libjpeg-turbo libpng libtiff ghostscript avahi ijs harfbuzz mupdf

name=cups-filters
version=1.16.4
release=1
source=( http://www.openprinting.org/download/$name/$name-$version.tar.xz)

build() {
	cd $name-$version
	./configure --prefix=/usr                   \
				--sysconfdir=/etc               \
				--localstatedir=/var            \
				--without-rcdir                 \
				--disable-static                \
				--with-gs-path=/usr/bin/gs      \
				--with-pdftops-path=/usr/bin/gs
	make
	make DESTDIR=$PKG install
}
