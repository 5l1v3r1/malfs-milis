# Tanım: GNU CLisp, ANSI Common Lisp uygulamasıdır.
# URL: http://clisp.cons.org/
# Paketçi: milisarge
# Gerekler: libsigsegv

name=clisp
version=2.49
release=1
source=(http://ftp.gnu.org/pub/gnu/clisp/latest/$name-$version.tar.bz2
		Makefile-R.yama)

build() {

   cd $name-$version

  ./configure \
    --prefix=/usr \
    --mandir=/usr/man

  cd src

  ./makemake \
    --with-dynamic-ffi \
    --without-dynamic-modules \
    --prefix=/usr \
    --mandir=/usr/man
  cd ..
  patch -Np1 -i $SRC/Makefile-R.yama
  cd src
  make -j1
  make -j1 DESTDIR=$PKG install

  rm -r $PKG/usr/share/doc

}
