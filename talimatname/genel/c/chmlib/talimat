name=chmlib
version=0.40
release=1
source=(http://morte.jedrea.com/~jedwin/projects/$name/$name-$version.tar.bz2)

build(){
    cd $name-$version
    ./configure --prefix=/usr \
                --enable-examples=yes
    make
    make DESTDIR=$PKG install
}
