# Description: Bir kullanıcı alanı programında bir dosya sistemini uygulamayı mümkün kılan bir kütüphane.
# URL: http://fuse.sourceforge.net/
# Packager: milisarge
# Depends on: doxygen

name=fuse
version=2.9.4
release=1
source=( https://github.com/libfuse/libfuse/releases/download/fuse_2_9_4/fuse-$version.tar.gz)

build() {
cd $name-$version
./configure --prefix=/usr \
--disable-static INIT_D_PATH=/tmp/init.d
make
make DESTDIR=$PKG install
mkdir -p $PKG/lib
mv -v $PKG/usr/lib/libfuse.so.* $PKG/lib
ln -sfv ../../lib/libfuse.so.$version $PKG/usr/lib/libfuse.so
rm -rf $PKG/tmp
rm $PKG/dev/fuse
}
