# Tanım: Hızlı ve güvenilir FTP, FTPS ve SFTP istemcisi
# URL: http://filezilla-project.org
# Paketçi: milisarge
# Gerekler: wxgtk libidn gnutls xdg-utils tinyxml dbus

isim=filezilla
surum=3.12.0.2
devir=1
kaynak=(http://downloads.sourceforge.net/project/$isim/FileZilla_Client/$surum/FileZilla_${surum}_src.tar.bz2)

derle() {
    cd $isim-$surum
    ./configure \
        --prefix=/usr \
        --disable-manualupdatecheck \
        --disable-autoupdatecheck \
        --disable-static \
        --disable-dependency-tracking \
	 --without-dbus
    make
    make DESTDIR=$PKG install
}
