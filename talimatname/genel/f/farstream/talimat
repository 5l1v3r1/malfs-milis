name=farstream
version=0.2.7
release=1
source=( http://freedesktop.org/software/farstream/releases/farstream/farstream-$version.tar.gz)

derle() {
cd $name-$version
./configure --prefix=/usr
make
make DESTDIR=$PKG install
}
