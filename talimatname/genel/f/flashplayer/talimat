# Tanım: Adobe Flash Player
# URL: http://www.macromedia.com
# Paketçi: milisarge
# Gerekler: nss

name=flashplayer
version=27.0.0.170
release=1
source=(https://fpdownload.adobe.com/get/flashplayer/pdc/$version/flash_player_ppapi_linux.x86_64.tar.gz::$name-$version.tar.gz
		flashplayer.mms.cfg)
      

build() {
	cd $SRC
	install -Dm644 libpepflashplayer.so "$PKG/usr/lib/mozilla/plugins/libflashplayer.so"
	install -Dm644 -t "$PKG/usr/share/licenses/$name" license.pdf LGPL/notice.txt
	install -D -m644 flashplayer.mms.cfg $PKG/etc/adobe/mms.cfg
}
