# Tanım: Anahat ve bitmap yazı tipi düzenleyicisi
# URL: http://fontforge.sourceforge.net
# Paketçi: milisarge
# Gerekler: xorg-libxi libxml2 pango giflib libtiff

name=fontforge
version=2.0.20150612
release=2
source=(https://github.com/$name/$name/releases/download/20150612/fontforge-20150612.tar.gz)

build() {
        cd $name*
	rm -rf libltdl
	rm m4/argz.m4
	./bootstrap
        ./configure --prefix=/usr    \
            --disable-static \
            --enable-gtk2-use \
            --docdir=/usr/share/doc/fontforge-$version
        make
        make DESTDIR=$PKG install
}
