# Tanım: The iptables stateful packet filtering firewall builder.
# URL: http://firehol.sourceforge.net
# Paketçi: milisarge
# Gerekler: iptables iproute2 iprange ipset

name=firehol
version=3.1.3
release=1.0
source=(https://github.com/firehol/firehol/releases/download/v3.1.3/firehol-3.1.3.tar.xz)

derle() {
  cd "$name-$version"
  ./configure \
    --prefix=/usr \
    --sbindir=/usr/bin \
    --sysconfdir=/etc \
    --libexecdir=/usr/lib
  make
  make install DESTDIR="$PKG"
  touch "$PKG"/etc/firehol/fire{hol,qos}.conf
}
