name=evolution
version=3.22.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr     \
      --sysconfdir=/etc   \
      --disable-gtkspell  \
      --disable-pst-import \
      --disable-spamassassin \
      --with-openldap \
      --enable-gtk-doc \
      --disable-autoar
make
make DESTDIR=$PKG install
}
