name=eog
version=3.20.5
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr \
--localstatedir=/var \
--sysconfdir=/etc
make
make DESTDIR=$PKG install
}
