# Tanım: Exif ve Iptc meta veri işleme kitaplığı ve araçları
# URL: http://www.exiv2.org/index.html
# Paketçi: milisarge
# Gerekler: expat

name=exiv2
version=0.25
release=1
source=(http://www.exiv2.org/$name-$version.tar.gz)

build() {
cd $name-$version
	./configure --prefix=/usr \
		 --disable-static
	make
	make DESTDIR=$PKG install
}
