# Gerekler: cmake

name=eigen3
version=3.2.5
release=1
source=(http://bitbucket.org/eigen/eigen/get/$version.tar.bz2)

derle() {
	cd eigen-eigen-*
	mkdir build
	cd build
	cmake -DCMAKE_INSTALL_PREFIX=/usr ..
	make
	make DESTDIR=$PKG install
}
