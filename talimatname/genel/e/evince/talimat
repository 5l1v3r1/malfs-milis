name=evince
version=3.22.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr      \
      --enable-introspection \
      --disable-static 
make
make DESTDIR=$PKG install
}
