name=tracker
version=1.10.3
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

derle(){
	cd $name-$version
./configure --prefix=/usr       \
      --sysconfdir=/etc     \
      --disable-static     \
      --disable-unit-tests   \
      --disable-miner-evolution \
      --disable-miner-firefox  \
      --disable-miner-thunderbird
  make
  make DESTDIR=$PKG install
}
