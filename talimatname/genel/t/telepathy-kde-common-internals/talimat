# Gerekler: kf5-extra-cmake-modules kf5-kdoctools doxygen kf5-knotifyconfig kf5-ktexteditor kf5-kpeople telepathy-logger-qt kaccounts-integration libotr hicolor-icon-theme telepathy-accounts-signon telepathy-qt5

name=telepathy-kde-common-internals
version=16.08.2
release=1
_name=ktp-common-internals

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

build() {
  cd ktp-common-internals-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr  \
        -DCMAKE_BUILD_TYPE=Release   \
         -DBUILD_TESTING=OFF
         
  make
  make DESTDIR=$PKG install
}
