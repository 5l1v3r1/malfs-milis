# Tanım: Komut satırı ve web kullanıcı arayüzü ile BitTorrent istemcisi/arka plan programı
# URL: https://transmissionbt.com/
# Paketçi: milisarge
# Gerekler: curl libevent gtk3 intltool

name=transmission
version=2.92
release=1
source=(https://download.transmissionbt.com/files/$name-$version.tar.xz)

derle() {
    cd $name-$version

    ./configure --prefix=/usr \
                --enable-cli \
                --enable-daemon \
                --with-gtk
    make
    make DESTDIR=$PKG install

    rm $PKG/usr/share/transmission/web/LICENSE
}
