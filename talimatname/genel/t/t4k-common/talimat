# Tanım: TuxType ve TuxMath tarafından paylaşılan kod için ortak kütüphane
# URL: http://tux4kids.alioth.debian.org/
# Paketçi: Cihan Alkan
# Gerekler: sdl-image sdl-mixer sdl-net sdl-ttf sdl-pango librsvg

name=t4k-common
_name=t4k_common
version=0.1.1
release=1

source=(http://downloads.sourceforge.net/project/tuxmath/$_name/$_name-$version.tar.gz
        libpng15.patch)


derle() {
	cd $SRC/$_name-$version
	patch -Np2 -i "$SRC/libpng15.patch"
	./configure --prefix=/usr 
	make
	make DESTDIR=$PKG install
}
