# Gerekler: kf5-extra-cmake-modules kf5-kdoctools telepathy-kde-common-internals kf5-kdewebkit kf5-kemoticons 

name=telepathy-kde-text-ui
version=16.08.2
release=1
_name=ktp-text-ui

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

derle() {
  cd ktp-text-ui-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr  \
        -DCMAKE_BUILD_TYPE=Release   \
        -DBUILD_TESTING=OFF
        
  make
  make DESTDIR=$PKG install
}
