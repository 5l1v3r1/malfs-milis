# Tanım: Telepati için KDE kanal onaycısı
# URL: http://community.kde.org/Real-Time_Communication_and_Collaboration
# Paketçi: alihan-ozturk28@hotmail.com
# Gerekler: kf5-extra-cmake-modules kf5-kdoctools telepathy-qt5 kf5-knotifications kf5-kservice

name=telepathy-kde-approver
version=16.08.2
release=1
_name=ktp-approver

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

derle() {
  cd ktp-approver-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr  \
        -DCMAKE_BUILD_TYPE=Release   \
        -DBUILD_TESTING=OFF
        
  make
  make DESTDIR=$PKG install
}
