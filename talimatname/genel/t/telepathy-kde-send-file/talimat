# Gerekler: kf5-extra-cmake-modules kf5-kdoctools telepathy-kde-common-internals kf5-kio

name=telepathy-kde-send-file
version=16.08.2
release=1
_name=ktp-send-file

source=(http://download.kde.org/stable/applications/$version/src/${_name}-$version.tar.xz)

build() {
  cd ktp-send-file-$version
  cmake -DCMAKE_INSTALL_PREFIX=/usr  \
        -DCMAKE_BUILD_TYPE=Release   \
        -DBUILD_TESTING=OFF
        
  make
  make DESTDIR=$PKG install
}
