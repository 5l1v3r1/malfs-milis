# Tanım: Çok yönlü bir kaynak istatistik aracı
# URL:  http://dag.wieers.com/home-made/dstat/
# Paketçi: milisarge
# Gerekler: python

name=dstat
version=0.7.3
release=1
source=(https://github.com/dagwieers/dstat/archive/${version}.tar.gz)

build() {
	cd $name-$version
	make DESTDIR=$PKG install
	make DESTDIR=$PKG docs
}
