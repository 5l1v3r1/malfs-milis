# Tanım: Aspell yazım denetimi yazılımı için Türkçe sözlükler.
# URL: http://aspell.net
# Paketçi: milisarge
# Gerekler: aspell

_version=0.50-0
name=aspell-tr
version=0.50.0
release=1
source=(ftp://ftp.gnu.org/gnu/aspell/dict/tr/$name-$_version.tar.bz2)

derle() {
  cd aspell-tr*
  ./configure
  make
  make DESTDIR=$PKG install
}
