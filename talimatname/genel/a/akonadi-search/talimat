name=akonadi-search
version=16.08.2
release=1
source=(http://download.kde.org/stable/applications/$version/src/$name-$version.tar.xz)

derle() {
  cd $name-$version
  cmake -DCMAKE_BUILD_TYPE=Release \
        -DCMAKE_INSTALL_PREFIX=/usr \
        -DCMAKE_INSTALL_LIBDIR=lib \
        -DBUILD_TESTING=OFF

  make
  make DESTDIR=$PKG install
}
