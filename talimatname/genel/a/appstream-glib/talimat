isim=appstream-glib
surum=0.5.17
devir=1

kaynak=(http://people.freedesktop.org/~hughsient/$isim/releases/$isim-$surum.tar.xz)

derle() {
cd $isim-$surum
./configure --prefix=/usr --disable-static
make
make DESTDIR=$PKG install
}
