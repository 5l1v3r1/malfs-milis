# Tanım: Paket bağımlılık çözücü
# URL: http://potassco.sourceforge.net/
# Paketçi: milisarge
# Gerekler: boost cmake re2c clingo
# Grup: kütüphane

isim=aspcud
surum=1.9.1
devir=1
kaynak=(http://downloads.sourceforge.net/project/potassco/aspcud/1.9.1/$isim-$surum-source.tar.gz)

derle() {
	mkdir -p build
	cd build
	cmake "../$isim-$surum-source" \
	-DCMAKE_INSTALL_PREFIX:PATH=/usr \
	-DCUDF2LP_LOC=cudf2lp \
	-DGRINGO_LOC=gringo \
	-DCLASP_LOC=clasp \
	-DCMAKE_BUILD_TYPE=Release \
	-GNinja
	ninja
	DESTDIR="$PKG" ninja -C $SRC/build install
}
