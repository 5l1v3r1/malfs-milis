# Tanım: WEP ve WPA için kablosuz şifresi çözmek için bir yardımcı araç.
# URL: http://www.aircrack-ng.org/
# Paketçi: milisarge
# Gerekler: libnl

name=aircrack-ng
version=1.2
release=1
source=(http://download.aircrack-ng.org/$name-$version-rc4.tar.gz)

derle() {
  cd $name-$version-rc4
  make \
      prefix=/usr \
      SQLITE=false \
      REVISION=0 \
      DESTDIR=$PKG install
}
