# Tanım: WEP ve WPA için kablosuz şifresi çözmek için bir yardımcı araç.
# URL: http://www.aircrack-ng.org/
# Paketçi: milisarge
# Gerekler: libnl
# Grup: güvenlik

isim=aircrack-ng
surum=1.2
devir=1
kaynak=(http://download.aircrack-ng.org/$isim-$surum-rc4.tar.gz)

derle() {
  cd $isim-$surum-rc4
  make \
      prefix=/usr \
      SQLITE=false \
      REVISION=0 \
      DESTDIR=$PKG install
}
