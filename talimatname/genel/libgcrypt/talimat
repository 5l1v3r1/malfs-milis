# Description: GnuPG kod tabanlı kriptoloji kütüphanesi
# URL:         http://www.gnupg.org
# Packager:    milisarge
# Depends on:  libgpg-error

name=libgcrypt
version=1.7.6
release=1
source=(ftp://ftp.gnupg.org/gcrypt/libgcrypt/$name-$version.tar.bz2)

build() {
  cd $name-$version

  ./configure \
      --prefix=/usr \
      --disable-padlock-support \
      --enable-static=yes
  make
  make DESTDIR=$PKG install

  rm -rf $PKG/usr/sbin
  rm -rf $PKG/usr/share/info
}
