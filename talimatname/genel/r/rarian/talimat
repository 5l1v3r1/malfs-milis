# Tanım: Scrollkeeper'ın yerini alacak şekilde tasarlanmış dokümantasyon meta veri kütüphanesi.
# URL: http://www.gnome.org/
# Paketçi: milisarge
# Gerekler: libxslt 

name=rarian
version=0.8.1
release=1

source=( http://ftp.gnome.org/pub/gnome/sources/rarian/${version%.*}/$name-$version.tar.bz2)
derle() {
cd $name-$version
./configure --prefix=/usr \
--localstatedir=/var
make
make DESTDIR=$PKG install
}
