# Tanım: Gzip ve PKZIP'de bulunan deflate sıkıştırma yöntemini uygulayan sıkıştırma kitaplığı
# URL: https://www.zlib.net/
# Paketçi: milisarge
# Gerekler: 

name=minizip
version=1.2.11
release=1
source=(https://zlib.net/zlib-${version}.tar.gz)

derle() {
    cd zlib-$version
	grep -A 24 '^  Copyright' zlib.h > LICENSE
	./configure --prefix=/usr
	make

	cd contrib/minizip
	cp Makefile Makefile.orig
	cp ../README.contrib readme.txt
	autoreconf --install
	./configure --prefix=/usr --enable-static=no
	make

	cd ${SRC}/zlib-$version/contrib/minizip
	make install DESTDIR=${PKG}
	install -D -m644 ${SRC}/zlib-$version/LICENSE ${PKG}/usr/share/licenses/minizip/LICENSE
}
