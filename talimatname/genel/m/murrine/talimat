# Tanım: Cairo tabanlı GTK motoru.
# URL: http://www.cimitan.com/murrine/
# Paketçi: milisarge
# Gerekler: gtk2

name=murrine
version=0.98.2
release=2

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

derle() {
cd murrine-$version

./configure \
--prefix=/usr \
--enable-animation \
--enable-animationrtl

make
make DESTDIR=$PKG install
}
