name=mate-netbook
version=1.18.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
    ./configure \
        --prefix=/usr \
        --libexec=/usr/lib/$name \
        --sysconfdir=/etc
    make
    make DESTDIR=$PKG install
}
