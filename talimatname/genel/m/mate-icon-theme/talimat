# Gerekler: icon-naming-utils intltool

name=mate-icon-theme
version=1.18.2
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
./configure \
        --prefix=/usr
  make
  make DESTDIR=$PKG install
}

