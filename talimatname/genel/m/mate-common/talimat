name=mate-common
version=1.18.0
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

derle() {
  cd $name-$version
    ./configure \
        --prefix=/usr
  make
  make DESTDIR=$PKG install
}
