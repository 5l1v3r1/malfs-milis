# Gerekler: mate-common

name=mate-icon-theme-faenza
version=1.18.1
release=1
source=(http://pub.mate-desktop.org/releases/${version%.*}/$name-$version.tar.xz)

build() {
  cd $name-$version
    ./autogen.sh
    ./configure \
        --prefix=/usr
  make
  make DESTDIR=$PKG install
}
