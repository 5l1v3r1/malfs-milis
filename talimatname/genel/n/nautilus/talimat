name=nautilus
version=3.22.3
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

build() {
cd $name-$version
./configure --prefix=/usr    \
      --sysconfdir=/etc  \
      --disable-packagekit 
make
make DESTDIR=$PKG install
}
