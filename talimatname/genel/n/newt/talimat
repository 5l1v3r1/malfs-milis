# Tanım: Newt, renkli metin modu, widget tabanlı kullanıcı arabirimleri için bir programlama kütüphanesi.
# URL: https://admin.fedoraproject.org/pkgdb/package/rpms/newt/
# Paketçi: milisarge
# Gerekler: popt slang

name=newt
version=0.52.18
release=1

source=( http://fedorahosted.org/releases/n/e/$name/$name-$version.tar.gz )
derle() {
cd $name-$version
sed -e 's/^LIBNEWT =/#&/' \
    -e '/install -m 644 $(LIBNEWT)/ s/^/#/' \
    -e 's/$(LIBNEWT)/$(LIBNEWTSONAME)/g' \
    -i Makefile.in

./configure --prefix=/usr --with-gpm-support &&
make
make DESTDIR=$PKG install
}
