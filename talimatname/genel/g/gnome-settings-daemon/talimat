name=gnome-settings-daemon
version=3.22.1
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)
build() {
cd $name-$version
./configure --prefix=/usr   \
      --sysconfdir=/etc \
      --disable-static \
      --disable-wayland
make
make udevrulesdir=/lib/udev/rules.d DESTDIR=$PKG install
}
