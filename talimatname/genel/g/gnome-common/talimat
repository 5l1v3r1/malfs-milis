# Tanım: GNOME3 için ortak makro (GIT Version)
# URL: http://www.gnome.org
# Paketçi: milisarge
# Gerekler:

name=gnome-common
version=3.18.0
release=1
source=(http://download.gnome.org/sources/$name/${version:0:4}/$name-$version.tar.xz)

derle() {
	cd $name-$version
	./configure --prefix=/usr
	make
	make  DESTDIR=$PKG/ install
}
