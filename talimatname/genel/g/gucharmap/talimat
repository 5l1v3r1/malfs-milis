name=gucharmap
version=8.0.1
release=1

source=(http://download.gnome.org/sources/$name/${version%.*}/$name-$version.tar.xz)

derle() {
    cd $name-$version
	./configure --prefix=/usr --enable-vala
    make
    make DESTDIR=$PKG install
}
