# Tanım: A simple MP3 player client for MTP based devices
# URL: http://gmtp.sourceforge.net/
# Paketçi: milisarge
# Gerekler: flac gtk3 libmtp libid3tag libvorbis 

name=gmtp
version=1.3.10
release=1
source=(https://netix.dl.sourceforge.net/project/gmtp/gMTP-$version/gmtp-$version.tar.gz)

derle() {
  cd "${name}-${version}"
  ./configure --prefix=/usr
  make
  install -D -m644 COPYING "${PKG}/usr/share/licenses/${name}/LICENSE"
  make DESTDIR="${PKG}" install
}
