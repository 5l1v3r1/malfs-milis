name=gnome-weather
version=3.20.2
release=1

source=(http://ftp.gnome.org/pub/gnome/sources/$name/${version%.*}/$name-$version.tar.xz)

derle() {
cd $name-$version
./configure --prefix=/usr --sysconfdir=/etc --localstatedir=/var
make
make DESTDIR=$PKG install
}
