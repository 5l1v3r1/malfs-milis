# Depends on:

name=linux-firmware
version=20161122
release=1
source=(http://distfiles.serverop.de/$name-$version.tar.xz)

build() {
    cd $name-$version

    # Build/Package
    make DESTDIR=$PKG FIRMWAREDIR=/lib/firmware install

    # Cleanup
    rm $PKG/lib/firmware/{Makefile,README,configure,GPL-{2,3}}
}
